#!bin/bash

# === const ===
# -------------

readonly DOTFILES_PATH=$HOME/dotfiles
readonly REMOTE_URL="https://github.com/Wurzeit/ditfiles.git"

# === colors ===
# --------------

if which tput >/dev/null 2>&1; then
  ncolors=$(tput colors)
fi
if [ -t 1 ] && [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
  RED="$(tput setaf 1)"
  GREEN="$(tput setaf 2)"
  YELLOW="$(tput setaf 3)"
  BLUE="$(tput setaf 4)"
  BOLD="$(tput bold)"
  NORMAL="$(tput sgr0)"
else
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  BOLD=""
  NORMAL=""
fi

# === functions ===
# -----------------

has() {
  type "$1" > /dev/null 2>&1
}

dotfiles_logo() {
  echo $BLUE
  cat <<\EOF
      _       _    __ _ _
   __| | ___ | |_ / _(_) | ___  ___
  / _` |/ _ \| __| |_| | |/ _ \/ __|
 | (_| | (_) | |_|  _| | |  __/\__ \
(_)__,_|\___/ \__|_| |_|_|\___||___/
EOF
echo $NORMAL
}

install() {
  if has "$1"; then
    echo "${BOLD}${1} is already exists.$NORMAL"
  else
    echo "Installing ${1}..."
    $2
    if [ $? = 0 ]; then
      echo "${GREEN}Successfully installed ${1}.$NORMAL"
    else
      echo "${RED}An unexpected error occurred when trying to install ${1}.$NORMAL"
      exit 1
    fi
  fi

  return 0
}

download_dotfiles() {
  cd $HOME
  if [ ! -d $DOT_PATH ]; then
    echo "Downloading dotfiles..."
    git clone --recursive $REMOTE_URL $DOT_PATH
    if [ $? = 0 ]; then
      echo "${GREEN}Successfully downloaded dotfiles.$NORMAL"
    else
      echo "${RED}An unexpected error occurred when trying to download clone$NORMAL"
      exit 1
    fi
  else
    echo "${BOLD}dotfiles is already exists.$NORMAL"
  fi
}

install_brew() {
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
}

# === main ===
# ------------

main() {
  sudo echo ""
  dotfiles_logo
  sudo apt update -y
  sudo apt install build-essential procps curl file git -y
  download_dotfiles
  install "brew" install_brew
  install "terminator" "brew install terminator"
  install "fish" "brew install fish"
  install "tmux" "brew install tmux"
  install "nvim" "brew install neovim"
}

main

exit 0
